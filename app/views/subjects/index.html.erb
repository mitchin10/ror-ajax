<h1>Subjects</h1>
<div class="actions">
  <%= link_to 'New Subject', new_subject_path, class: 'btn btn-primary btn-sm' %>
</div>

<p id="notice"><%= notice %></p>

<table class="table-responsive" id="subjects">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.title %></td>
        <td><%= subject.description %></td>
        <td><%= subject.status %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: 'delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
